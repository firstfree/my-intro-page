{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "off",
            "never"
        ],
        "no-console": [
            "off",
            { "allow": [ "warn", "error" ] }
        ],
        "no-constant-condition": [
            "error", 
            { "checkLoops": false }
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}